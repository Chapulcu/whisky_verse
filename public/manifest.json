  "shortcuts": [
    {
      "name": "Viski Koleksiyonum",
      "short_name": "Koleksiyon",
      "description": "Kişisel viski koleksiyonunu görüntüle",
      "url": "/collection",
      "icons": [
        {
          "src": "/icons/collection-icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Viski Keşfet",
      "short_name": "Keşfet",
      "description": "Yeni viskiler keşfet",
      "url": "/whiskies",
      "icons": [
        {
          "src": "/icons/discover-icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Kamera",
      "short_name": "Fotoğraf",
      "description": "Viski fotoğrafı çek",
      "url": "/camera",
      "icons": [
        {
          "src": "/icons/camera-icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/camera",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+whiskyverse",
      "url": "/?handler=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}